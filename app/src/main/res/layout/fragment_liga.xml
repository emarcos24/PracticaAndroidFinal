<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentoLiga"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:background="#2C2D2D">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Temporada 24/25"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingTop="15dp"/>

        <!-- Imagen del equipo favorito que el usuario elige -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/logomadrid"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- TABLA DE EQUIPOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewBarca"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logobarca" />

                <ImageView
                    android:id="@+id/imageViewBaskonia"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logobaskonia" />

                <ImageView
                    android:id="@+id/imageViewGirona"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logogirona" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewBaxi"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logobaxi" />

                <ImageView
                    android:id="@+id/imageViewZaragoza"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logozaragoza" />

                <ImageView
                    android:id="@+id/imageViewGranada"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logogranada" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewGranCanaria"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logograncanaria" />

                <ImageView
                    android:id="@+id/imageViewLleida"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logolleida" />

                <ImageView
                    android:id="@+id/imageViewBadalona"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logobadalona" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewTenerife"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logotenerife" />

                <ImageView
                    android:id="@+id/imageViewCoruna"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logocoruna" />

                <ImageView
                    android:id="@+id/imageViewAndorra"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logoandorra" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewMadrid"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logomadrid" />

                <ImageView
                    android:id="@+id/imageViewRio"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logoriobreogan" />

                <ImageView
                    android:id="@+id/imageViewBilbao"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logobilbao" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewMurcia"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logomurcia" />

                <ImageView
                    android:id="@+id/imageViewUnicaja"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logounicaja" />

                <ImageView
                    android:id="@+id/imageViewValencia"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logovalencia" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <!-- RECYCLER VIEW PARA EQUIPOS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEquipos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@color/black"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentoJornada"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:background="#2C2D2D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Temporada 24/25"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingTop="15dp"/>

        <!-- Imagen del equipo favorito que el usuario elige -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/logomadrid"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#2C2D2D"
            android:paddingTop="10dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:paddingBottom="10dp"
            android:paddingLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Jornada X"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#2C2D2D"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingRight="60dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewBarca"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logobarca"
                        android:contentDescription="Logo del Barsa"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido1"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewGirona"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logogirona" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewBaxi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logobaxi" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido2"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewGranada"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logogranada" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewGranCanaria"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logograncanaria" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido3"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewBadalona"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logobadalona" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewTenerife"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logotenerife" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido4"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewAndorra"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logoandorra" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewMadrid"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logomadrid" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="3"
                        android:text="Partido5"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logobilbao" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewMurcia"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logomurcia" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido6"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewTeam3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logovalencia" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewej1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logomurcia" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido7"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewej2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logovalencia" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewej3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logomurcia" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido7"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewej4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logovalencia" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewej5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logomurcia" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Partido9"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageViewej6"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logovalencia" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
